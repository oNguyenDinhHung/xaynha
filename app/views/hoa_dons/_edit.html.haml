.modal#hoa_don-edit-modal{tabindex:-1, role: :dialog, 'aria-labelledby'=>"myModalLabel", 'aria-hidden'=>"true"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %h4.modal-title#myModalLabel Sửa hóa đơn
        %button.close{type: :button, 'data-dismiss'=>"modal", 'aria-hidden'=>"true"} &times;
      .modal-body
        = simple_form_for :hoa_don, url: hoa_don_path(id: 0), method: :patch, :remote => true, html: { id: 'edit_hoa_don', role: :form, 'data-model' => 'hoa_don'} do |f|
          = f.input :thoi_gian, label: 'Thời gian' do
            = f.input_field :thoi_gian, as: :datetime, readonly: true, class: 'form-control'
            .span.help-block
          = f.input :nha_cung_cap_id, label: 'Nhà cung cấp' do
            = f.input_field :nha_cung_cap_id, collection: NhaCungCap.pluck(:ten, :id), readonly: true, class: 'form-control'
            .span.help-block
          = f.input :nguoi_ki, label: 'Người kí' do
            = f.input_field :nguoi_ki, collection: HoaDon::NGUOI_KIS, readonly: true, class: 'form-control'
            .span.help-block
          = f.input :thanh_toan, label: 'Thanh toán' do
            = f.input_field :thanh_toan, as: :float, class: 'form-control'
            .span.help-block
          = f.input :note, label: 'Ghi chú' do
            = f.input_field :note, class: 'form-control'
          = f.input :file, label: 'Ảnh' do
            = f.input_field :file, as: :file, class: 'form-control'
          = f.button :submit, 'Cập nhật', class: 'btn btn-warning'
